{
  "openapi": "3.0.1",
  "info": {
    "title": "API de Usuario",
    "description": "API para la gestión de usuarios en el sistema de gestion de transporte.",
    "contact": {
      "name": "Soporte API",
      "email": "johandavidsalinascarvajal67@gmail.com"
    },
    "version": "v1"
  },
  "paths": {
    "/api/{id}": {
      "get": {
        "tags": [
          "UsuarioControlador"
        ],
        "summary": "Endpoint para obtener un usuario específico basado en su identificador.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Identificador único del usuario.",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      },
      "delete": {
        "tags": [
          "UsuarioControlador"
        ],
        "summary": "Endpoint para eliminar un usuario basado en su identificador.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Identificador único del usuario a eliminar.",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api": {
      "get": {
        "tags": [
          "UsuarioControlador"
        ],
        "summary": "Endpoint para obtener una lista de usuarios según un filtro.",
        "requestBody": {
          "description": "Objeto con los criterios de búsqueda.",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UsuarioFiltro"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/UsuarioFiltro"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/UsuarioFiltro"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      },
      "post": {
        "tags": [
          "UsuarioControlador"
        ],
        "summary": "Endpoint para insertar un nuevo usuario en la base de datos.",
        "requestBody": {
          "description": "Objeto con la información del usuario a insertar.",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UsuarioDto"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/UsuarioDto"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/UsuarioDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      },
      "patch": {
        "tags": [
          "UsuarioControlador"
        ],
        "summary": "Endpoint para actualizar un usuario existente en la base de datos.",
        "requestBody": {
          "description": "Objeto con la información actualizada del usuario.",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UsuarioDto"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/UsuarioDto"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/UsuarioDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "RolDto": {
        "type": "object",
        "properties": {
          "idRol": {
            "type": "integer",
            "format": "int32"
          },
          "nombreRol": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "UsuarioDto": {
        "type": "object",
        "properties": {
          "idUsuario": {
            "type": "integer",
            "format": "int32"
          },
          "nombre": {
            "type": "string",
            "nullable": true
          },
          "correo": {
            "type": "string",
            "nullable": true
          },
          "contrasena": {
            "type": "string",
            "nullable": true
          },
          "rol": {
            "$ref": "#/components/schemas/RolDto"
          }
        },
        "additionalProperties": false
      },
      "UsuarioFiltro": {
        "type": "object",
        "properties": {
          "idUsuario": {
            "type": "integer",
            "format": "int32"
          },
          "nombre": {
            "type": "string",
            "nullable": true
          },
          "idRol": {
            "type": "integer",
            "format": "int32"
          }
        },
        "additionalProperties": false
      }
    }
  }
}